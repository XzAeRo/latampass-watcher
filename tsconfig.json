{
  "extends": "@apify/tsconfig",
  "compilerOptions": {
    "module": "esnext",
    "target": "ES2022",
    "outDir": "dist",
    "noUnusedLocals": false,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "allowJs": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "sourceMap": true,
    "strict": true,
  },
  "include": [
    "crawler/*.ts",
    "pages/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
